<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_row="2"
    android:layout_column="2"

    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/toplLinearLayout"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="56dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/auswahlfelderGridView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="invisible">

        <TextView
            android:id="@+id/timerTextView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="#C9FFB522"
            android:gravity="center"
            android:text="30s"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/sumTextView"
            android:layout_width="155dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="Aufgabe"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/scoreTextView"
            android:layout_width="85dp"
            android:layout_height="60dp"
            android:background="#00BCD4"
            android:gravity="center"
            android:text="0/0"
            android:textAlignment="center"
            android:textSize="30sp" />
    </LinearLayout>

    <GridLayout
        android:id="@+id/auswahlfelderGridView"
        android:layout_width="300dp"
        android:layout_height="250dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomLinearLayout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toplLinearLayout"
        android:visibility="invisible">

        <Button
            android:id="@+id/button0"
            android:layout_width="150dp"
            android:layout_height="125dp"
            android:layout_row="0"
            android:layout_column="0"
            android:background="#B53F3F"
            android:gravity="center"
            android:onClick="chooseAnswerButton"
            android:tag="0"
            android:text="20"
            android:textAlignment="center"
            android:textSize="40sp" />

        <Button
            android:id="@+id/button1"
            android:layout_width="150dp"
            android:layout_height="125dp"
            android:layout_row="0"
            android:layout_column="1"
            android:background="#C4673AB7"
            android:gravity="center"
            android:onClick="chooseAnswerButton"
            android:tag="1"
            android:text="20"
            android:textAlignment="center"
            android:textSize="40sp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="150dp"
            android:layout_height="125dp"
            android:layout_row="1"
            android:layout_column="0"
            android:background="#2196F3"
            android:gravity="center"
            android:onClick="chooseAnswerButton"
            android:tag="2"
            android:text="20"
            android:textAlignment="center"
            android:textSize="40sp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="150dp"
            android:layout_height="125dp"
            android:layout_row="1"
            android:layout_column="1"
            android:background="#4CAF50"
            android:gravity="center"
            android:onClick="chooseAnswerButton"
            android:tag="3"
            android:text="20"
            android:textAlignment="center"
            android:textSize="40sp" />
    </GridLayout>

    <LinearLayout
        android:id="@+id/bottomLinearLayout"
        android:layout_width="411dp"
        android:layout_height="150dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/auswahlfelderGridView">

        <TextView
            android:id="@+id/resultTextView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_horizontal"
            android:text="Los!"
            android:textAlignment="center"
            android:textSize="36sp"
            android:visibility="invisible" />

        <Button
            android:id="@+id/playAgainButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="playAgain"
            android:text="Play Again"
            android:visibility="invisible" />

    </LinearLayout>

    <Button
        android:id="@+id/goButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#4CAF50"
        android:onClick="start"
        android:padding="20dp"
        android:text="GO!"
        android:textSize="80sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>