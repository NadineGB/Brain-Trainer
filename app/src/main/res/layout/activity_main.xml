<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_row="2"
    android:layout_column="2"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/toplLinearLayout"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="56dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/gridViewAuswahlfelder"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/timeTextView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="#C9FFB522"
            android:gravity="center"
            android:text="30s"
            android:textSize="30sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/aufgabeTextView"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="Aufgabe"
            android:textSize="30sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/punkteStandTextView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="#00BCD4"
            android:gravity="center"
            android:text="0/0"
            android:textAlignment="center"
            android:textSize="30sp"
            android:visibility="invisible" />
    </LinearLayout>

    <GridLayout
        android:id="@+id/gridViewAuswahlfelder"
        android:layout_width="300dp"
        android:layout_height="250dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toplLinearLayout"
        app:layout_constraintBottom_toTopOf="@id/bottomLinearLayout">

        <TextView
            android:id="@+id/ergebnis1"
            android:layout_width="150dp"
            android:layout_height="125dp"
            android:layout_row="0"
            android:layout_column="0"
            android:background="#B53F3F"
            android:gravity="center"
            android:textAlignment="center"
            android:textSize="40sp"
            android:visibility="invisible"
            tools:text="20" />

        <TextView
            android:id="@+id/ergebnis2"
            android:layout_width="150dp"
            android:layout_height="125dp"
            android:layout_row="0"
            android:layout_column="1"
            android:background="#C4673AB7"
            android:gravity="center"
            android:textAlignment="center"
            android:textSize="40sp"
            android:visibility="invisible"
            tools:text="20" />

        <TextView
            android:id="@+id/ergebnis3"
            android:layout_width="150dp"
            android:layout_height="125dp"
            android:layout_row="1"
            android:layout_column="0"
            android:background="#2196F3"
            android:gravity="center"
            android:textAlignment="center"
            android:textSize="40sp"
            android:visibility="invisible"
            tools:text="20" />

        <TextView
            android:id="@+id/ergebnis4"
            android:layout_width="150dp"
            android:layout_height="125dp"
            android:layout_row="1"
            android:layout_column="1"
            android:background="#4CAF50"
            android:gravity="center"
            android:textAlignment="center"
            android:textSize="40sp"
            android:visibility="invisible"
            tools:text="20" />
    </GridLayout>

    <LinearLayout
        android:id="@+id/bottomLinearLayout"
        android:layout_width="411dp"
        android:layout_height="150dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gridViewAuswahlfelder"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_horizontal"
            android:text="Done! "
            android:textAlignment="center"
            android:textSize="36sp"
            android:visibility="invisible" />

        <Button
            android:id="@+id/playAgainButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Play Again"
            android:visibility="invisible" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#4CAF50"
        android:text="Go!"
        android:textSize="80sp"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>